package base

import (
	"github.com/josuebrunel/sportdropin/pkg/view"
	"github.com/josuebrunel/sportdropin/pkg/view/component"
	"github.com/josuebrunel/sportdropin/pkg/xsession"
)

templ Header() {
	@component.Header(templ.Attributes{"class": "container"}) {
		<nav>
			<ul>
				<li>
					<h2><a href="/"><strong>SPORTIX</strong></a></h2>
				</li>
			</ul>
			<ul>
				@AccountMenu()
			</ul>
		</nav>
		{ children... }
		<hr/>
	}
}

templ Main(attr templ.Attributes) {
	@component.Main(component.AttrMerge(templ.Attributes{"class": "container"}, attr)) {
		{ children... }
	}
}

templ SearchBar() {
	<form role="search" hx-get="/group" hx-trigger="click" hx-target="#container">
		<input type="search" name="search" id="search" placeholder="Search"/>
	</form>
}

templ Layout(title string) {
	@component.HTML(templ.Attributes{"lang": "en"}) {
		@component.Head() {
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			@component.Title(title)
			@component.Styles() {
				@component.LinkStyle("https://cdn.jsdelivr.net/npm/@picocss/pico@next/css/pico.min.css", templ.Attributes{})
				@component.LinkStyle("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css", templ.Attributes{})
				@component.LinkStyle("/static/css/styles.css", templ.Attributes{"type": "text/css", "media": "screen", "charset": "utf-8"})
			}
		}
		@component.Body(templ.Attributes{}) {
			{ children... }
			<script src="https://unpkg.com/htmx.org@2.0.0"></script>
			@component.Footer(templ.Attributes{})
		}
	}
}

templ Index() {
	@Layout("Sportix") {
		@Header() {
			@SearchBar()
		}
		@component.Main(templ.Attributes{"class": "container", "id": "container", "hx-trigger": "load", "hx-get": "/group"})
	}
}

templ AccountMenu() {
	if xsession.IsAuthenticated(ctx) {
		<p>
			Hello 
			@component.Link(xsession.GetUser(ctx).Email, view.Reverse(ctx, "account.get", xsession.GetUser(ctx).ID), templ.Attributes{})
		</p>
	} else {
		<details class="dropdown">
			<summary><i class="fa-solid fa-bars"></i> </summary>
			<ul>
				@component.Link("Sign in", view.Reverse(ctx, "account.login"), templ.Attributes{})
				@component.Link("Sign up", view.Reverse(ctx, "account.register"), templ.Attributes{})
			</ul>
		</details>
	}
}
